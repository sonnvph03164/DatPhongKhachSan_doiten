<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bạn có thể sử dụng tài khoản:"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="16dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2" />

    <android.support.v7.widget.CardView
        android:layout_width="343dp"
        android:layout_height="73dp"
        android:layout_marginLeft="16dp"
        android:layout_weight="0.04">

        <Button
            android:id="@+id/button6"
            android:layout_width="169dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text="Google" />

        <Button
            android:id="@+id/button5"
            android:layout_width="174dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:text="Facebook" />
    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:text="Hoặc đăng nhập bằng tài khoản " />

    <android.support.v7.widget.CardView
        android:layout_width="346dp"
        android:layout_height="180dp"
        android:layout_marginLeft="16dp">

        <EditText
            android:id="@+id/editText"
            style="@style/AppTheme.NoActionBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Nhập địa chỉ email" />

        <EditText
            android:id="@+id/editText2"
            style="@style/AppTheme.NoActionBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="43dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Nhập mật khẩu" />

        <CheckBox
            android:id="@+id/checkBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="70dp"
            android:text="Hiển thị mật khẩu" />

        <Button
            android:id="@+id/button7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:text="ĐĂNG NHẬP" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="70dp"
            android:text="Quên mật khẩu?" />
    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="16dp"
        android:text="Chưa có tài khoản? đăng kí" />

</LinearLayout>